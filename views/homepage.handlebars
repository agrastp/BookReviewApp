{{!-- Seeded Book Information --}}

<section id="books-section" class="container">
    {{#each books as |book|}}
    <section id="{{{generateUuid}}}" class="custom-books-section box" class="flex-container">
        <section class="section">
            <div class="container custom-container">
                <div class="columns is-mobile is-multiline">
                    <div class="column is-full-mobile is-half-tablet">
                        <img class="custom-image" data="{{book.id}}" src="{{{book.image}}}">
                    </div>
                    <div class="column is-full-mobile is-half-tablet has-text-right">
                        {{#if ../loggedInUser}}
                        <button data="{{book.id}}" class="add-review-button-homepage button is-primary" >View Reviews</button>
                        {{/if}}
                    </div>
                </div>
            </div>
        </section>

        <figure class="book-images"  class="image is-3by2">
            <img data="{{book.id}}" src="{{{book.image}}}" class="book-image-redirect" width="120" height="200">
            
            {{!-- Villy: Is loggedInUser the logged_in value? --}}
            {{#if ../loggedInUser}}
            <button data="{{book.id}}" class="add-review-button-homepage button is-small">View Reviews</button>
            {{/if}}
        </figure>
        <section class="book-lists custom-columns">
            <aside class="custom-right-column">
                <li class="book-title" class="display-below-576"><span>Title:</span> {{book.title}}</li>
                <li class="book-author"><span class="display-below-576">Author: </span> {{book.author}}</li>
                <li class="book-genre"><span class="display-below-576">Genre: </span> {{book.genre}}</li>
                <li class="book-page_num"><span class="display-below-576">Pages: </span> {{book.page_num}}</li>
            </aside>
        </section>

        <section class="book-description-box">
            <p class="book-description">{{book.description}}</p>
        </section>
    </section>
    {{/each}}
</section>

<script src="/js/homepage.js"></script>